<Window x:Class="QuizApp.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Title="QuizWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock x:Name="QuestionTextBlock" FontSize="16" TextWrapping="Wrap" />

            <RadioButton x:Name="Option1" Content="Option 1" GroupName="Answers" FontSize="14"/>
            <RadioButton x:Name="Option2" Content="Option 2" GroupName="Answers" FontSize="14"/>
            <RadioButton x:Name="Option3" Content="Option 3" GroupName="Answers" FontSize="14"/>
            <RadioButton x:Name="Option4" Content="Option 4" GroupName="Answers" FontSize="14"/>

            <Button Content="Next Question" Width="150" Height="30" HorizontalAlignment="Right" Click="NextQuestion_Click"/>
        </StackPanel>
    </Grid>
</Window>
